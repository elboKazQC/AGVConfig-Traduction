+    def initialize_directory(self, directory: str) -> bool:
+        """Initialise le gestionnaire avec un r√©pertoire de base"""
+        try:
+            self.base_directory = directory
+            self.file_map = {}
+            self._scan_directory(directory)
+            logger.info(f"R√©pertoire initialis√© : {directory}")
+            return True
