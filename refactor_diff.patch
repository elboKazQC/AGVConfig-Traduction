+import inspect
+from typing import Dict, List, Any, Callable, Optional, Type
+
+class Plugin:
+    """Base class for all plugins."""
+
+    # Plugin metadata
+    name = "Base Plugin"
+    version = "1.0.0"
+    description = "Base plugin class"
+    author = "Unknown"
+
+    def __init__(self, app=None):
+        """Initialize the plugin with a reference to the application."""
+        self.app = app
+
+    def activate(self):
